<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Produkty.MainPage">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Label x:Name="StatusLabel"
               Text="Liczba produktów: 0"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <ListView x:Name="ListaProduktow"
                  ItemSelected="ListaProduktow_Selected"
                  HeightRequest="400" />

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="Dodaj" Clicked="Dodaj_Clicked"/>
            <Button Text="Edytuj" Clicked="Edytuj_Clicked"/>
            <Button Text="Usuń" Clicked="Usun_Clicked"/>
            <Button Text="Zapisz CSV" Clicked="Zapisz_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>